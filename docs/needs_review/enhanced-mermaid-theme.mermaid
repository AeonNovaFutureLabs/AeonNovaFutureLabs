graph TB
    subgraph Cloud["🌐 Cloud Services"]
        K8s[("Kubernetes")]
        ADB[("AstraDB")]
        Vector[("Vector Store")]
    end

    subgraph Core["⚙️ Core Systems"]
        API["API Gateway"]
        Auth["Auth Service"]
        Cache["Cache Layer"]
    end

    subgraph Data["📊 Data Flow"]
        Process["Processor"]
        Store["Storage"]
        Analytics["Analytics"]
    end

    Cloud --> Core
    Core --> Data

style Cloud fill:url(#gradient-cloud),#1A1A2E
style Core fill:url(#gradient-core),#33334C
style Data fill:url(#gradient-data),#1A1A2E
classDef default stroke:#CD7F32,stroke-width:2px,color:#FFFFFF
classDef endpoint fill:#CD7F32,stroke:#1A1A2E,color:#FFFFFF